<h2 class="text-xl font-bold mb-4">
  ログイン
</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="mb-3">
    <%= f.label :email, "メールアドレス" %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border rounded px-3 py-2" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, "パスワード" %><br>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full border rounded px-3 py-2" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "ログイン状態を保持する" %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.submit "ログイン", class: "w-full bg-[--color-brandGreen] text-white py-2 rounded" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
