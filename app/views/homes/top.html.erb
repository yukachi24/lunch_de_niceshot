<div class="max-w-4xl mx-auto px-4">

  <!-- сЃъсѓцсЃџсЃ╝сѓИУдІтЄ║сЂЌ -->
  <div style="margin-top: 40px; margin-bottom: 32px;">
    <h1 style="font-size: 1.875rem; font-weight: 700; color: #111827;">
      сЃъсѓцсЃџсЃ╝сѓИ
    </h1>
  </div>

  <!-- ­ЪЈє сЃЎсѓ╣сЃѕсѓ╣сѓ│сѓб -->
  <section style="margin-bottom: 32px;">
    <h2 style="font-size: 1.125rem; font-weight: 700; margin-bottom: 4px;">
      ­ЪЈє сЃЎсѓ╣сЃѕсѓ╣сѓ│сѓб
    </h2>

    <% if @best_round.present? %>
      <!-- сѓ╣сѓ│сѓб + Putts№╝ѕС╗БУАесЃЕсѓдсЃ│сЃЅ№╝Ѕ -->
      <p
        style="
          font-size: 4rem;
          font-weight: 800;
          color: var(--color-brandGreen);
          line-height: 1;
          margin: 0;
        "
      >
        <%= @best_score %>
        <span
          style="
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--color-brandGreen);
            margin-left: 8px;
            vertical-align: middle;
          "
        >
          (Putts: <%= @best_round.total_putts %>)
        </span>
      </p>

      <!-- С╗БУАесЃЕсѓдсЃ│сЃЅТЃЁта▒ -->
      <p
        style="
          font-size: 0.875rem;
          color: #6b7280;
          line-height: 1.3;
          margin-top: 4px;
        "
      >
        <%= @best_round.date.strftime("%Yт╣┤%mТюѕ%dТЌЦ") %><br>
        <%= @best_round.course_name %>
      </p>

      <!-- ­ЪЇ┤ тІЮсЂАжБ» -->
      <h3 style="font-size: 1rem; font-weight: 600; margin: 16px 0 8px;">
        ­ЪЇ┤ тІЮсЂАжБ»
      </h3>

      <% if @winning_lunches.any? %>
        <% @winning_lunches.each do |lunch| %>
          <div style="margin-bottom: 20px;">
            <!-- сЃЕсЃ│сЃЂсЂФу┤љсЂЦсЂЈсЃЕсѓдсЃ│сЃЅТЃЁта▒ -->
            <p style="font-size: 0.75rem; color: #6b7280; margin-bottom: 4px;">
              <%= lunch.round.date.strftime("%Yт╣┤%mТюѕ%dТЌЦ") %>
              №╝Ј
              <%= lunch.round.course_name %>
            </p>

            <% if lunch.image.attached? %>
              <%= image_tag lunch.image.variant(resize_to_fill: [256, 160]),
                    style: "display:block; margin-bottom:8px; border-radius:8px;" %>
            <% end %>

            <p style="font-size: 0.875rem; color: #374151;">
              <strong>сЃЕсЃ│сЃЂсѓ│сЃАсЃ│сЃѕ№╝џ</strong>
              <%= lunch.comment.presence || "сѓ│сЃАсЃ│сЃѕсЂ»сЂЙсЂасЂѓсѓісЂЙсЂЏсѓЊ" %>
            </p>
          </div>
        <% end %>
      <% else %>
        <p style="font-size: 0.875rem; color: #6b7280;">
          тІЮсЂАжБ»сЂ»сЂЙсЂауЎ╗жї▓сЂЋсѓїсЂдсЂёсЂЙсЂЏсѓЊ
        </p>
      <% end %>

    <% else %>
      <p style="font-size: 0.875rem; color: #6b7280;">
        сЂЙсЂасѓ╣сѓ│сѓбсЂїуЎ╗жї▓сЂЋсѓїсЂдсЂёсЂЙсЂЏсѓЊ
      </p>
    <% end %>
  </section>

  <!-- Рєњ сЂЊсЂ«сЃЕсѓдсЃ│сЃЅсѓњУдІсѓІ№╝ѕС╗БУАесЃЕсѓдсЃ│сЃЅ№╝Ѕ -->
  <% if @best_round.present? %>
    <div style="margin-bottom: 24px;">
      <%= link_to "Рєњ сЂЊсЂ«сЃЕсѓдсЃ│сЃЅсѓњУдІсѓІ",
                  round_path(@best_round),
                  style: "font-size:0.875rem; color:#2563eb; text-decoration:underline;" %>
    </div>
  <% end %>

  <!-- ­ЪЊІ сЃЕсѓдсЃ│сЃЅСИђУдД -->
  <div style="margin-bottom: 24px;">
    <%= link_to "­ЪЊІ сЃЕсѓдсЃ│сЃЅСИђУдДсЂИ",
                rounds_path,
                style: "font-size:0.875rem; color:#374151; text-decoration:underline;" %>
  </div>

  <!-- РЏ│ сЃЕсѓдсЃ│сЃЅжќІтДІ -->
  <div style="margin-top: 48px; margin-bottom: 64px;">
    <%= link_to "РЏ│ сЃЕсѓдсЃ│сЃЅжќІтДІ",
                new_round_path,
                style: "
                  font-size: 1.6rem;
                  font-weight: 700;
                  color: #111827;
                  text-decoration: underline;
                " %>
  </div>

</div>
